{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/Backend/app/main.py" },
    { "source": "/(.*)", "destination": "/Frontend/$1" }
  ],
  "builds": [
    {
      "src": "Backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "Frontend/**",
      "use": "@vercel/static"
    }
  ]
}