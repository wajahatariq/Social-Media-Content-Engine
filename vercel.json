{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/Backend/app/main.py" },
    { "source": "/", "destination": "/Frontend/index.html" }, 
    { "source": "/(.*)", "destination": "/Frontend/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron/publish",
      "schedule": "*/5 * * * *"
    }
  ],
  "builds": [
    {
      "src": "Backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "Frontend/**",
      "use": "@vercel/static"
    }
  ]
}
